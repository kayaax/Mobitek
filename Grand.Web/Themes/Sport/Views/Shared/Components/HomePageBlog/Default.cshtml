@model HomePageBlogItemsModel
@inject DisplayOrderHomePage order
@if (Model.Items.Any())
{
    <div class="blog-list-homepage hp-section customGrid order-@order.HomePageBlog">
        <div class="generalMarginSupporter">
            <h2 class="generalTitle page-title text-center">
                @T("Blog.Latest")
            </h2>
        </div>
        <div class="col-12 px-0">
            <div class="form-row flex-grid">
                @foreach (var item in Model.Items)
                {
                    @if (item.PictureModel != null && !string.IsNullOrEmpty(item.PictureModel.ImageUrl))
                    {
                        <div class="col-xl-@order.Pb_Xl col-lg-@order.Pb_Lg col-md-@order.Pb_Md col-sm-@order.Pb_Sm col-@order.Pb_Col mb-md-0 mb-3">
                            <div class="card news-card lazy-box lazyload">
                                <div class="card-header border-bottom-0 p-0">
                                    <div class="img-container">
                                        <a href="@Url.RouteUrl("BlogPost", new { SeName = item.SeName })">
                                            <div class="img-container">
                                                <img class="card-img-top img-fluid lazyload" alt="@item.PictureModel.AlternateText" data-src="@item.PictureModel.ImageUrl" title="@item.PictureModel.Title">
                                            </div>
                                            <span class="news-date"><span class="lnr linearicons-calendar-text mr-2"></span>@item.CreatedOn.ToString("D")</span>
                                            <h3 class="h5 news-title"><a href="@Url.RouteUrl("BlogPost", new { SeName = item.SeName })">@item.Title</a></h3>
                                        </a>
                                    </div>
                                </div>
                                <div class="card-body p-0">
                                    @Html.Raw(item.Short)
                                </div>
                                <div class="d-flex justify-content-center w-100">
                                    <a class="btn btn-secondary btn-underline read-more" href="@Url.RouteUrl("NewsItem", new { SeName = item.SeName })">@T("Blog.MoreInfo")</a>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col-xl-@order.Pb_Xl col-lg-@order.Pb_Lg col-md-@order.Pb_Md col-sm-@order.Pb_Sm col-@order.Pb_Col mb-md-0 pb-3 d-flex align-items-center">
                            <div class="col-12">
                                <div class="row">
                                    <div class="news-card card lazy-box lazyload">
                                        <span class="news-date"><span class="lnr linearicons-calendar-text mr-2"></span>@item.CreatedOn.ToString("D")</span>
                                        <h3 class="h5 news-title"><a href="@Url.RouteUrl("BlogPost", new { SeName = item.SeName })">@item.Title</a></h3>
                                        <div class="card-body p-0">
                                            @Html.Raw(item.Short)
                                        </div>
                                        <div class="d-flex justify-content-center w-100">
                                            <a class="btn btn-secondary btn-underline read-more" href="@Url.RouteUrl("NewsItem", new { SeName = item.SeName })">@T("Blog.MoreInfo")</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
        <div class="view-all text-center mt-3">
            <a class="btn btn-outline-secondary  text-uppercase" href="@Url.RouteUrl("Blog")">@T("Blog.ViewAll")</a>
        </div>
    </div>
}