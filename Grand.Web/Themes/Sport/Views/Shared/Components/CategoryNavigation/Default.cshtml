@model CategoryNavigationModel
@if (Model.Categories.Any())
{
    <div id="block-category-navigation" class="col-sm--12 block block-category-navigation d-lg-block d-none">
        <h2 class="h5 rotate"><strong>@T("Categories")</strong><span class="arrowHold"></span></h2>
        <div class="viewBox listbox" style="display: none">
            <ul class="list">
                @foreach (var category in Model.Categories)
                {
                    var categoryLineModel = new CategoryNavigationModel.CategoryLineModel
                    {
                        CurrentCategoryId = Model.CurrentCategoryId,
                        Category = category
                    };
                    <partial name="_CategoryLine.Navigation" model="categoryLineModel" />
                }
            </ul>
        </div>
    </div>
}