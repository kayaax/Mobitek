@model AddOrderNoteModel
@inject IPageHeadBuilder pagebuilder
@{
    Layout = "_ColumnsOne";

    //title
    pagebuilder.AddTitleParts(T("PageTitle.OrderDetails").Text);
}
<div class="page order-details-page mb-3">
    <div class="container">
        <h2 class="generalTitle page-title text-center">@T("Order.AddOrdernote")</h2>
        <div class="write-review" id="review-form">
            <form asp-route="ProductReviews" method="post">
                <input asp-for="OrderId" type="hidden" />
                <div asp-validation-summary="ModelOnly" class="message-error"></div>
                <fieldset>
                    <div class="form-fields">
                        <div class="form-group">
                            <label asp-for="Note" class="col-form-label">@T("OrderNote.Fields.Title"):</label>
                            <textarea asp-for="Note" class="form-control review-title"></textarea>
                            <span asp-validation-for="Note"></span>
                        </div>
                    </div>
                </fieldset>
                <div class="common-buttons justify-content-center">
                    <button type="submit" name="add-review" class="btn btn-info write-product-review-button">@T("OrderNote.SubmitButton")</button>
                </div>
            </form>
        </div>
    </div>
</div>