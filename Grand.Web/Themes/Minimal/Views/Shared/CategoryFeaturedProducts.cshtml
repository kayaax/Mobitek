<template v-if="hpi.HomePageItems[0].CategoryFeaturedProducts.loading">
    <b-skeleton animation="fade" height="55px"></b-skeleton>
    <b-col cols="12" class="mt-3 px-0">
        <div class="item-row">
            <b-col xl="3" lg="4" md="4" sm="6" cols="6">
                <b-skeleton-img animation="fade" height="450px"></b-skeleton-img>
            </b-col>
            <b-col xl="3" lg="4" md="4" sm="6" cols="6">
                <b-skeleton-img animation="fade" height="450px"></b-skeleton-img>
            </b-col>
            <b-col xl="3" lg="4" md="4" sm="6" cols="6" class="d-md-block d-none">
                <b-skeleton-img animation="fade" height="450px"></b-skeleton-img>
            </b-col>
            <b-col xl="3" lg="4" md="4" sm="6" cols="6" class="d-xl-block d-none">
                <b-skeleton-img animation="fade" height="450px"></b-skeleton-img>
            </b-col>
        </div>
    </b-col>
</template>
<div v-else-if="hpi.HomePageItems[0].CategoryFeaturedProducts.items[0] !== undefined" id="CategoryFeaturedProducts" class="section">
    <div class="featured-product-grid">
        <b-col cols="12" class="px-0">
            <div class="item-row">
                <b-col xl="6" lg="6" cols="12" v-for="Category in hpi.HomePageItems[0].CategoryFeaturedProducts.items" class="category-container">
                    <div class="item-row">
                        <b-col xl="6" lg="6" md="6" cols="6" v-for="Model in Category.FeaturedProducts" class="category-product">
                            <partial name="_ProductBoxVue" />
                        </b-col>
                        <b-col cols="12" class="category-image">
                            <a :href="'/' + Category.SeName">
                                <img :src="Category.PictureModel.FullSizeImageUrl" class="img-fluid" />
                            </a>
                            <div class="content">
                                <span class="title">
                                    {{Category.Name}}
                                </span>
                                <template v-for="item in Category.GenericAttributes">
                                    <template v-if="item.Key == 'AltName'">
                                        <span class="desc">{{item.Value}}</span>
                                    </template>
                                </template>
                            </div>
                        </b-col>
                    </div>
                </b-col>
            </div>
        </b-col>
    </div>
</div>